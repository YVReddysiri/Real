<h3>Creating New Product</h3>
  <%= form_for(@product) do |f| %>
    <div>
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</div>
    <div>
	  <%= f.label :description  %>
	  <%= f.text_field :description  %>
	</div>
    <div>
      <%= f.submit "create " %>
	</div>
    <%end%>

<p>
  <%= link_to "Create product", new_product_path %>
</p>

<p>
  <%= link_to "Back", products_path %>
</p> 