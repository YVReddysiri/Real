<h3>Create New Product</h3>
  <%= form_for(@product) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :user_id %>
      <%= f.text_field :user_id %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<p>
  <%= link_to "Back", products_path %>
</p>  

