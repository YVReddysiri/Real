<h3>Creating New Book</h3>
     <%= form_for(@book) do |f| %>

		<div>
		  <%= f.label :name %>
		  <%= f.text_field :name %>
		</div>

		<div>
		  <%= f.label :description  %>
		  <%= f.text_field :description  %>
		</div>

		<div>
		  <%= f.label :user_id  %>
		  <%= f.text_field :user_id  %>
		</div>

        <div>
		  <%= f.submit "create " %>
		</div>
    <%end%>

<p>
  <%= link_to "Create book", new_book_path %>
</p>

<p>
  <%= link_to "Back", users_path %>
</p>    